<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="se.mah.k3.skaneAPI.BlankFragment"
    android:id="@+id/blank">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="4dp"            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="#ffffffff"
                android:text="@string/fran" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/spinnerStations"
            android:textColor="#ffffffff"
            android:entries = "@array/stations"
            android:prompt = "@string/spinner_title">
            </Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/till"
                android:layout_marginLeft="4dp"
                android:textColor="#ffffffff"
                android:layout_marginRight="4dp"/>
            <Spinner
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#ffffffff"
                android:id="@+id/spinnerStations2"
                android:entries = "@array/stations"
                android:prompt = "@string/spinner_title"
                android:layout_marginLeft="14dp">

            </Spinner>

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="4dp"
            android:padding="4dp"
            android:textColor="#ffffffff"
            android:id="@+id/trafik"
            android:text="@string/trafik"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:layout_marginBottom="4dp"
            android:layout_weight="1"
            android:id="@+id/avgar"
            android:textColor="#ffffffff"
            android:text="@string/avgar"/>

    </LinearLayout>

        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left|top"
            android:divider="#ff4c4c4c"
            android:childDivider="@android:color/holo_blue_dark"
            android:id="@+id/expandableListView"
            android:childIndicator="@android:color/background_dark"
            android:dividerHeight="1dp"
            android:focusableInTouchMode="false"
            android:headerDividersEnabled="false"
            android:longClickable="false" />

    </LinearLayout>




</FrameLayout>
